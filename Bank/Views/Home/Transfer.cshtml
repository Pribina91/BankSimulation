@{
    ViewBag.Title = "Transfer";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        <h5>@Html.Label("result")</h5>
        @Html.ValidationSummary(true)


        <div class="form-group">
            <label class="control-label col-md-2">From Account:</label>
            <div class="col-md-10">
                @Html.TextBox("fromAccount")
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">To Account:</label>
            <div class="col-md-10">
                @Html.TextBox("toAccount")
            </div>
        </div>
        <div class="form-group">
            <label class=" control-label col-md-2">Currency</label>
            <div class="col-md-10">
                @Html.DropDownList("idCurrency", String.Empty)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Amount:</label>
            <div class="col-md-10">
                @Html.TextBox("amount")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Transfer" class="btn btn-primary btn-large" />
            </div>
        </div>
    </div>
}

