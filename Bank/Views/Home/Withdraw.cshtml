@{
    ViewBag.Title = "Withdraw";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        <h5>@Html.Label("result")</h5>
        @Html.ValidationSummary(true)


        <div class="form-group">
            <label class="control-label col-md-2">Withdraw Account:</label>
            <div class="col-md-10">
                @Html.TextBox("withdrawAccount")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Amount:</label>
            <div class="col-md-10">
                @Html.TextBox("amount")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Withdraw" class="btn btn-primary btn-large" />
            </div>
        </div>

    </div>
}
}